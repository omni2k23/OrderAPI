{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Order",
    "description": "Schema for validating order data",
    "type": "object",
    "properties": {
        "order_number": {
            "type": "integer",
            "description": "The order number",
            "minimum": 1
        },
        "order_datetime": {
            "type": "string",
            "description": "The date and time when the order was placed",
            "format": "date-time"
        },
        "store_name": {
            "type": "string",
            "description": "The name of the store"
        },
        "customer_id": {
            "type": "integer",
            "description": "The ID of the customer who placed the order",
            "minimum": 1
        },
        "driver_id": {
            "type": "integer",
            "description": "The ID of the driver who delivered the order",
            "minimum": 1
        },
        "item_name": {
            "type": "string",
            "description": "The name of the item ordered"
        },
        "item_price": {
            "type": "number",
            "description": "The price of the item ordered",
            "minimum": 0
        },
        "total": {
            "type": "number",
            "description": "The total cost of the order",
            "minimum": 0
        },
        "status": {
            "type": "string",
            "description": "The status of the order"
        }
    },
    "required": [
        "order_number",
        "order_datetime",
        "store_name",
        "customer_id",
        "driver_id",
        "item_name",
        "item_price",
        "total",
        "status"
    ]
}
